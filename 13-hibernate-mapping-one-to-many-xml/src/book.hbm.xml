<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
          "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
          "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">

<hibernate-mapping>
	<class name="me.anuraj.Book" table="books">
		<id name="id">
			<generator class="sequence" />
		</id>
		<property name ="name" column="book_name"/>
		
		<set name="authors" cascade="all">
			<key column="book_id"></key>  
			<one-to-many class="me.anuraj.Author"></one-to-many>
		</set>
		
	</class>
	<class name="me.anuraj.Author" table="author">
		<id name="id">
			<generator class="sequence" />
		</id>
		<property name ="firstName" column="author_firstname"/>
		<property name ="lastName" column="author_lastname"/>
		
	</class>
</hibernate-mapping>