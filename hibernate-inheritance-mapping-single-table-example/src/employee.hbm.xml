<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  "-//Hibernate/Hibernate Mapping DTD 5.3//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">

<hibernate-mapping>
	<class name="me.anuraj.Employee" table="employee"
		discriminator-value="emp">
		<id name="id">
			<generator class="uuid">
				<param name="separator">-</param>
			</generator>
		</id>

		<discriminator column="type" type="string"></discriminator>
		<property name="firstName"></property>
		<property name="lastName"></property>

		<subclass name="me.anuraj.RegularEmployee"
			discriminator-value="reg_emp">
			<property name="salary"></property>
			<property name="bonus"></property>
		</subclass>

		<subclass name="me.anuraj.ContractEmployee"
			discriminator-value="con_emp">
			<property name="payPerHour"></property>
			<property name="contractDuration"></property>
		</subclass>

	</class>
</hibernate-mapping>  